<%- include("includes/header"); -%>
<%- include("includes/navi"); -%>

<h5 class="blue-text mt3">REKISTERÖIDY</h5>

<div class="row mt3">
    <form method="POST" action="/rekisteroidy">
        <div class="row mt3">
            <div class="six columns">
                <label for="rekisteroiTunnus">Käyttäjätunnus</label>
                <input class="u-full-width" type="text" name="rekisteroiTunnus" placeholder="Kirjoita käyttäjätunnus" autofocus>
            </div>
        </div>
        <div class="row">
            <div class="six columns mt3">
                <label for="rekisteroiSalasana">Salasana</label>
                <input class="u-full-width" type="password" name="rekisteroiSalasana1" placeholder="Kirjoita salasana">
            </div>
        </div>
        <div class="row mt3">
            <div class="six columns">
                <input class="u-full-width" type="password" id="rekisteroiSalasana" name="rekisteroiSalasana2" placeholder="Kirjoita salasana uudelleen">
            </div>
        </div>
        <div class="row">
            <div class="four columns mt3">
              <input class="button-primary u-full-width mt3" type="submit" value="Rekisteröidy">
            </div>
        </div>
    </form>
</div>

<% if (virhe) { %>
<div class="u-full-width blue-alert mt3">
    <%=virhe%>
</div>
<% } %>
<% if (ok) { %>
<div class="u-full-width blue-alert mt3">
    <%=ok%>
</div>
<% } %>

<%- include("includes/footer") -%>